<!-- Search -->
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Search</h3>
    </div>
    <div class="panel-body">
        <form class="form" role="form" id="searchForm">
            <div class="form-group">
                <label class="sr-only" for="search">Search</label>
                <input type="search" name="search" class="form-control" id="search" placeholder="Add something awesome...!">
            </div>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <!-- Artist results -->
        <div class="panel panel-info" id="artist-results">
            <div class="panel-heading">
                <h3 class="panel-title">Artists<span class="badge pull-right result-count">0</span></h3>
            </div>
            <div class="panel-body result-list">
            </div>
            <div class="panel-footer">
                <ul class="pager">
                    <li class="next"><a href="#">All artists &rarr;</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <!-- Album results -->
        <div class="panel panel-info" id="album-results">
            <div class="panel-heading">
                <h3 class="panel-title">Albums<span class="badge pull-right result-count">0</span></h3>
            </div>
            <div class="panel-body result-list">

            </div>
            <div class="panel-footer">
                <ul class="pager">
                    <li class="next"><a href="#">All albums &rarr;</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Track Results -->
<div class="panel panel-success" id="track-results">
    <div class="panel-heading">
        <h3 class="panel-title">Tracks<span class="badge pull-right result-count"></span></h3>
    </div>
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>#</th>
                    <th></th>
                    <th>Track Name</th>
                    <th>Artist Name</th>
                    <th>Album Name </th>
                    <th></th>
                </tr>
                </thead>
                <tbody class="result-list">
                </tbody>
            </table>
        </div>

    </div>
    <div class="panel-footer">
        <div class="text-center">
            <ul class="pagination">
                <li class="disabled"><span>&laquo;</span></li>
                <li class="active"><span>1 <span class="sr-only">(current)</span></span></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><a href="#">5</a></li>
                <li><a href="#">&raquo;</a></li>
            </ul>
        </div>
    </div>
</div>

<!-- Handlebars templates -->
<script id="simple-result" type="text/x-handlebars-template">
    <div class="col-md-4">
        <div class="thumbnail">
            <a href="/search/artist/{{href}}">
                <img src="{{artwork}}" alt="{{name}}"/>
                <div class="caption">
                    <h4>{{name}}</h4>
                </div>
            </a>
        </div>
    </div>
</script>

<script id="track-row" type="text/x-handlebars-template">
    <tr>
        <td>{{count}}</td>
        <td><img src="{{artwork}}" alt="{{name}}"/></td>
        <td>{{name}}</td>
        <td>{{artistName}}</td>
        <td>{{albumName}}</td>
        <td><button data-uri="{{href}}">Add</button></td>
    </tr>
</script>